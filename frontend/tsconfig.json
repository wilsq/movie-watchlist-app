{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["vite/client"],

    "strict": true,
    "skipLibCheck": true,

    "noEmit": true,
    "isolatedModules": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
